{{#each courses}}
<div class="col-sm-6 col-lg-4">
    <div class="card card-course-item" style="width: 18rem;">
        <a href="/courses/{{this.slug}}">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">

        </a>
        <div class="card-body">
            <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
            </a>

            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Mua khóa học</a>
        </div>
    </div>
</div>
{{/each}}

<div id="wp-content" class="container">
    <div id="content">
        <div class="box new-post">
            <div class="box-head">
                <h3>Bài viết mới</h3>
            </div>
            <div class="box-body">
                <ul class="list-post">
                    {{#each newses}}
                    <li>
                        <a href="" class="post-thump">
                            <img src="{{this.image}}" alt="{{this.name}}">
                        </a>
                        <div class="more-info">
                            <a href="/newses/{{this.slug}}" class="post-tittle">{{this.name}}</a>
                            <div class="post-published">
                                <a href="" class="post-author">{{this.author}}</a>
                                <span class="post-date">{{this.createdAt}}</span>
                            </div>
                            <p class="post-excerpt">
                                {{this.description}}
                            </p>
                        </div>
                    </li>
                    {{/each}}

                </ul>
            </div>
        </div>
    </div>
    <!-- End content  -->

<!DOCTYPE html>
<html>

<head>
    <title>Employee</title>
</head>

<body>
    <h3 align="center">Employee Table</h3>
    <div class="row">
        <div class="add-button col-md-2" align="right">
            <p>
                <a class="btn btn-info btn-sm" href="/employee/add">Add</a>
            </p>
        </div>
    </div>
    <table class="table table-hover" style="width:60%;" align="center">
        <tr class="table-primary">
            <th>NIK</th>
            <th>Name</th>
            <th>Email</th>
            <th>Job</th>
            <th>Action</th>
        </tr>
        {{#each employeeList}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.job.title}}</td>
            <td>
                <a href="/employee/edit/{{this.id}}">Edit</a>
                <a type="text">|</a>
                <a href="/employee/delete/{{this.id}}" onclick="return confirm('Are you sure?')">Delete</a>
            </td>
        </tr>

        {{/each}}
    </table>
</body>

</html>